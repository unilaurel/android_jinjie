<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

   <Button
       android:id="@+id/btnGotoActivity2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="go to Activity"
       android:onClick="onClick"/>


   <Button
       android:id="@+id/btnGotoService"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="go to Service"
       android:onClick="onClick"/>

   <Button
       android:id="@+id/btnSetUserName"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="set user name"
       android:onClick="onClick"/>


   <Button
       android:id="@+id/btnGetUserName"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="get user name"
       android:onClick="onClick"/>



</LinearLayout>